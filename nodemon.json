{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "data/**",
    ".vscode/**",
    "scss/**",
    "client/**",
    "static/**",
    "nodemon.json",
    "package.json",
    "package-lock.json",
    "docs/**"
  ],
  "verbose": true,
  "execMap": { 
    "ts": "node --require ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
